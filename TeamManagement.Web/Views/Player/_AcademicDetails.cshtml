@model TeamManagement.Web.Models.AcademicDetails
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "personal_details" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <div class="form-group">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.Degree, new { @class = "control-label" })
        </div>

        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.Degree, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(m => m.Degree, null, new { @class = "errorMessage" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            @Html.LabelFor(m => m.Year, new { @class = "control-label" })
        </div>

        <div class="col-sm-3">
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control", @required = "required" })
            @Html.ValidationMessageFor(m => m.Year, null, new { @class = "errorMessage" })
        </div>
    </div>
    <input type="hidden" name="count" value="1" />

    <div class="form-group " id="fields">
        <div id="field">
            <div class="col-sm-3">
                @Html.LabelFor(m => m.SubjectCode, new { @class = "control-label" })<strong> And</strong>
                @Html.LabelFor(m => m.SubjectName, new { @class = "control-label" })
            </div>
            <div class="col-sm-6">
                <div class="input-group" id="unified-inputs">
                    @Html.TextBoxFor(m => m.SubjectCode, new { @class = "form-control width35", @required = "required" })
                    @Html.ValidationMessageFor(m => m.SubjectCode, null, new { @class = "errorMessage" })

                    @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control width50", @required = "required" })
                    @Html.ValidationMessageFor(m => m.SubjectName, null, new { @class = "errorMessage" })
                    <button id="b1" class="btn add-more" type="button">+</button>
                </div>
            </div>
        </div>
    </div>
}
<style>
    #unified-inputs.input-group {
        width: 100%;
    }


        #unified-inputs.input-group input:last-of-type {
            border-left: 0;
        }

    .width35 {
        width: 35% !important;
    }

    .width50 {
        width: 50% !important;
    }

    #field {
        margin-bottom: 20px;
    }
</style>